@{
	ViewData["Title"] = "Contact Us";
	@model ContactForm;

}

<main style="display:flex; justify-content: center; align-content:center ">
    <div class="submission-form">
        <header style="justify-content:center; display:flex;"><h1 class="contact-header">Contact Us</h1></header>

        <form id="contactForm" action="/Home/Contact" method="post">
            <div>
				<div><label class="label" for="Name">Name:</label></div>
				<input class="input" type="text" name="Name" id="Name" placeholder="Name" required />
            </div>
            <div>
				<div> <label class="label" for="Surname">Surname:</label></div>
				<input class="input" type="text" name="Surname" id="Surname" placeholder="Surname" required />
            </div>
            <div>
				<div><label class="label" for="Email">Email:</label></div>
				<input class="input" type="email" name="EmailAddress" id="EmailAddress" placeholder="Email" required />
            </div>
            <div>
				<div><label class="label" for="Subject">Subject:</label></div>
				<input class="input" type="text" name="Subject" id="Subject" placeholder="Subject" required />
            </div>
            <div>
				<div><label class="label" for="Body">Body:</label></div>
				<textarea class="text-body" name="Body" id="Body" placeholder="Body" required></textarea>
            </div>
            <div class="footer">
                <button class="submit-button" type="submit">Submit</button>
            </div>
        </form>
    </div>
</main>

<script>
	function submitForm() {
		// Get the form element
		var form = document.getElementById("contactForm");


		//event.preventDefault();


		form.submit();
	}
</script>